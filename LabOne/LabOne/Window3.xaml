<Window x:Class="LabOne.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabOne"
        mc:Ignorable="d"
        Title="Tic-tac-Toe" Height="800" Width="600" Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/clipart4410466.png">
    <Grid x:Name="GameTable" Margin="30,20,30,32">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Grid.Row="0" FontSize="72" Click="Button_Click" FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Normal" Tag="00"/>
        <Button Grid.Column="1" Grid.Row="0" FontSize="72" Click="Button_Click"  FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Normal" Tag="10"/>
        <Button Grid.Column="2" Grid.Row="0" FontSize="72" Click="Button_Click"  FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Normal" Tag="20"/>
        <Button Grid.Column="3" Grid.Row="0" FontSize="72" Click="Button_Click"  FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Normal" Tag="30"/>
        <Button Grid.Column="4" Grid.Row="0" FontSize="72" Click="Button_Click"  FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Normal" Tag="40"/>
