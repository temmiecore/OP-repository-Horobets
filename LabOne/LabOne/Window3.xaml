        <Button Grid.Column="1" Grid.Row="1" FontSize="72" Click="Button_Click"  FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Normal" Tag="11"/>
        <Button Grid.Column="2" Grid.Row="1" FontSize="72" Click="Button_Click"  FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Normal" Tag="21"/>
        <Button Grid.Column="3" Grid.Row="1" FontSize="72" Click="Button_Click"  FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Normal" Tag="31"/>
        <Button Grid.Column="4" Grid.Row="1" FontSize="72" Click="Button_Click"  FontFamily="Comic Sans MS" FontWeight="Bold" FontStyle="Normal" Tag="41"/>
